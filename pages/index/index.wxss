.sub_nav_inner {
    max-width: 750rpx;
    width: 85%;
    min-width: 600rpx;
    margin: 0 auto;
    position: relative;
}

@media (max-width: 1024px) {
.sub_nav_box {
    background-color: #f6f7f8;
    padding-left: 0;
    position: static;
    height: 60rpx;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
    -webkit-font-smoothing: antialiased;
}}


@media (max-width: 1024px) {
.sub_nav_inner {
    position: static;
}}

.book-summary-opr {
    display: none;
    width: 44rpx;
    height: 54rpx;
    position: absolute;
    left: 4rpx;
    padding: 16rpx 11rpx;
}

@media (max-width: 1024px){
.book-summary-opr {
    display: block;
}}

.book-summary-opr .book-summary-btn {
    display: inline-block;
    width: 22rpx;
    height: 22rpx;
    background-image: url(https://developers.weixin.qq.com/miniprogram/assets/images/list@2x.png);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}

@media(max-width: 1024px){
#book-search-input {
    right: 40rpx;
    top: 6rpx;
    background-color: transparent;
}}

#book-search-input {
    position: absolute;
    top: 0;
    right: 0;
    display: inline;
    background: 0 0;
    transition: top .5s ease;
    vertical-align: middle;
    background-color: #f6f8f9;
    z-index: 8;
}

#book-search-input .search-icon {
    display: inline-block;
    vertical-align: middle;
    font-size: 0;
}


#book-search-input .search-icon:before {
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background-image: url(https://developers.weixin.qq.com/miniprogram/assets/images/search@1x.png);
    background-repeat: no-repeat;
    margin: 12rpx 10rpx 13rpx;
    cursor: pointer;
}


@media (-webkit-min-device-pixel-ratio: 2) {
#book-search-input .search-icon:before {
    background-image: url(https://developers.weixin.qq.com/miniprogram/assets/images/search@2x.png);
    background-size: contain;
}}

#book-search-input input, #book-search-input input:focus, #book-search-input input:hover {
    background: 0 0;
    box-shadow: none;
    outline: 0;
    line-height: 22rpx;
    color: inherit;
    transition: width .5s ease;
    padding: 0;
    border: none;
    vertical-align: middle;
}

#book-search-input input {
    width: 0;
}

#book-search-input .clear-input-btn {
    display: none;
    position: absolute;
    right: 0;
    top: 0;
    border: none;
    background: 0 0;
    outline: 0;
    padding: 15rpx;
}

